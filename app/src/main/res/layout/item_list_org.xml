<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/tv_id_ILO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_link_ILO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
    android:id="@+id/tv_date_ILO"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" />

    <TextView
        android:id="@+id/tv_date_delta_ILO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_ILO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_0.5step_margin"
            android:textColor="@color/colorFirstText"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="First National Bank" />

        <TextView
            android:id="@+id/tv_region_ILO"
            style="@style/TextSecond"
            tools:text="South Dakota" />

        <TextView
            android:id="@+id/tv_city_ILO"
            style="@style/TextSecond"
            tools:text="Deadwood" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/activity_0.5step_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextThird"
                android:layout_marginRight="@dimen/activity_0.5step_margin"
                android:text="@string/phone" />

            <TextView
                android:id="@+id/tv_phone_ILO"
                style="@style/TextThird"
                tools:text="ask for Seth Bullock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/activity_0.5step_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextThird"
                android:layout_marginRight="@dimen/activity_0.5step_margin"
                android:text="@string/address" />

            <TextView
                android:id="@+id/tv_address_ILO"
                style="@style/TextThird"
                tools:text="624, Main Street" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/activity_0.5step_margin"
            android:background="@color/colorMenuBar"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ib_link_ILO"
                    style="@style/MenuPadButton"
                    android:src="@drawable/ic_link" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ib_map_ILO"
                    style="@style/MenuPadButton"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/ic_map" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ib_phone_ILO"
                    style="@style/MenuPadButton"
                    android:src="@drawable/ic_phone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_date_short_ILO"
                    style="@style/TextThird"
                    android:layout_gravity="center"
                    android:textSize="@dimen/time_text_size"
                    tools:text="0000.00.00 00:00" />

                <ImageButton
                    android:id="@+id/ib_next_ILO"
                    style="@style/MenuPadButton"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
